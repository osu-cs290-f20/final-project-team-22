<main class="content">
    <style>
        .sign-in-container {
            height: 800px;
        }

        .sign-in-title {
            height: 300px;
            width: 600px;
            top: 200px;
            left: 55%;
        }

        .form-control {
            height: 50px;
            width: 200px;
            margin-bottom: 50px;
        }
    </style>
    <div class="sign-in-container">
        <div class="qualified-content">
            <h1>Login Page</h1>
        </div>
        <div class="sign-in-title">
            <div class="form-group">
                <input type="text" id="username" class="form-control" placeholder="username" autocomplete="off">
            </div>
            <div class="form-group">
                <input type="password" id="password" class="form-control" placeholder="password" autocomplete="off">
            </div>
            <button type="button" class="btn btn-primary form-control" id="login_button"><a href="javascript:;"
                    style="color:black;">Login</a></button>
            <button type="button" class="btn btn-primary form-control" id="back_button"><a href="javascript:;"
                    style="color:black  ;">Back to homepage</a></button>
        </div>

    </div>
    <script>
        $(function() {
       var $button = $('#login_button')
       var $username = $('#username')
       var $password = $('#password')
       $button.on('click', function() {
           var username = $username.val()
           var password = $password.val()
           $.post('/api/login',{username, password},function(data) {
               if(data.errno == -1) {
               alert('username or password is wrong')
               return
               }
               if(data.errno == 0) {
                   alert('login sucessfully')
                   location.href = '/homePage'
                   return
               }
            })
       })
   })
    </script>


</main>