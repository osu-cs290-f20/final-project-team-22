<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>OSU Tutors</title>
    <link rel="stylesheet" href="css/style.css">
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery/3.5.1/jquery.js"></script>
    <script src="js/index.js" charset="utf-8" defer></script>
    <script src="plugins/layer/layer.js"></script>
  </head>

  <body>
    <header>
      <div class="header-container">

      </div>
      <h1 class="site-title"><a href="#">OSU Tutors</a></h1>
      <div class="navbar">
        <a href="index.html">Home</a>
        <a class="active" href="tutors">Tutors</a>
        <a href="#Contact">Contact</a>
        <a href="about.html">About</a>
      </div>
    </header>

    <main class="content">
      <section id="tutors">
        <% for(let i = 0; i < result.length ;i++ ){ %>
          <div class="tutor" data-name="Sandy Cheeks" data-year="Senior" data-major="Engineering">
            <div class="tutor-contents">
              <div class="tutor-img-container">
                <img src="<%= result[i].imgSrc %>" alt="Sandy Cheeks">
              </div>
              <div class="tutor-info-container">
                <a href="#" class="tutor-title">
                  <%= result[i].title %>
                </a>
                <span class="s-tutor"><%= result[i].tutor %></span>
                <span class="s-grade"><%= result[i].grade %></span>
                <span>(<%= result[i].major %>)</span>
                <button type="button" id="book-tutor-button" class="action-button" details="<%= result[i].body %>">detail</button>
              </div>
            </div>
          </div>
        <% } %>
      </section>
      <div id="tutor-modal-backdrop" class="hidden"></div>
      <div id="tutor-modal" class="hidden">
        <div class="modal-dialog">
          <div class="modal-header">
            <!-- <h3>Sandy Cheeks</h3> -->
            <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
          </div>
          <div class="modal-body">
            <p>Sandy Cheeks</p>
          </div>
        </div>
      </div>
    </main>
    <div class="addTutors">+</div>
  </body>

</html>
