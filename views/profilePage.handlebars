<main class="content">
    {{#if this.name}}
      {{> tutorProfile}}
    {{/if}}

    <section id='reviews'>
      {{#if reviewData}}
        {{#each reviewData}}
          {{> tutorReview}}
        {{/each}}
      {{/if}}
    </section>

    <button type="button" id="add-review-button">Click here to leave a new review!</button>

    <div id="review-modal-backdrop" class="hidden"></div>
    <div id="add-review-modal" class="hidden">
      <div class="review-modal-dialog">

      <div class="review-modal-header">
        <h3>Tell us about your experience with this tutor</h3>
        <button type="button" id="review-modal-close" class="modal-hide-button">&times;</button>
      </div>

      <div class="review-modal-body">

        <div class="review-input">
          <label for="reviewerName-input">Your Name</label>
          <input type="text" id="reviewerName-input">
        </div>

        <div class="review-input">
          <label for="quality-rating-input">Quality Rating</label>
          <input type="text" id="quality-rating-input"></input>
        </div>

        <div class="review-input">
          <label for="review-text-input">Review</label>
          <input type="text" id="review-text-input"></input>
        </div>

      </div>

      <div class="modal-footer">
        <button type="button" id="review-modal-clear" class="modal-hide-button action-button">Clear</button>
        <button type="button" id="review-modal-accept" class="action-button">Leave Review</button>
      </div>

    </div>
  </div>

  <div class="average-rating-div">
    <span id="average-rating-span">0</span>
  </div>

</main>
